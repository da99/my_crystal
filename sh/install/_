#!/usr/bin/env mksh
#

# === {{CMD}}  --runtime
# === {{CMD}}  # Installs Crystal version specified in configs/crystal-version

get-output () {
  "$@" 2>/dev/null || :
}

if [[ "$(arch)" != 'x86_64' ]]; then
  echo "!!! Only 64-bit architecures supported." >&2
  echo "   (Only 512 fibers allowed in 32-bit architectures.)" >&2
  exit 2
fi

if [[ "$(echo $@)" == "--runtime" ]]; then
  case "$(lsb_release -r -c -s)" in
    "rolling void")
      PATH="$PATH:$THIS_DIR/../my_os/bin"
      my_os package --install libgcc-devel libevent-devel libllvm4.0 \
        libevent-devel gc gc-devel lzo-devel libmcrypt-devel libgcrypt-devel \
        libressl-devel
      ;;
  esac
  return 0
fi

my_crystal install --runtime

local +x LATEST="$(my_crystal latest)"
local +x DIR="$THIS_DIR/tmp/crystal-versions/$LATEST"
local +x LATEST_LINK="$THIS_DIR/tmp/latest-crystal"
local +x CRYSTAL="$LATEST_LINK/bin/crystal"

if [[ -z "$LATEST" ]]; then
  echo "!!! Could not determine latest Crystal download on the Internet." >&2
  exit 1
fi

if [[ "$(realpath "$LATEST_LINK")" == "$(realpath "$DIR")"  && -x "$CRYSTAL" ]]; then
  echo "=== Already installed: " >&2
  echo "$LATEST" >&2
  my_crystal __ --version
  return 0
fi

mkdir -p "$(dirname "$DIR")"
mkdir -p "$THIS_DIR/tmp"

local +x TMP_FILE="$(my_crystal download $LATEST)"
if [[ -z "$TMP_FILE" ]]; then
  exit 5
fi

cd "$(dirname "$DIR")"
tar -zxf "$TMP_FILE"
mv "${LATEST%%-linux-*}" "$LATEST"

rm -f "$LATEST_LINK"
ln -s "$DIR" "$LATEST_LINK"

echo "$LATEST" > "$CRYSTAL_VERSION_FILE"
echo "=== Installed Crystal:" >&2
"$CRYSTAL" --version


